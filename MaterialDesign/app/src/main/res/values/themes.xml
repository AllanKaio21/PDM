<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme Tela 1 -->
    <style name="Theme.Tela1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/T1color2</item>
        <item name="colorPrimaryVariant">@color/T1color4</item>
        <item name="colorOnPrimary">@color/T1color1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/T1color2</item>
        <item name="colorSecondaryVariant">@color/T1color5</item>
        <item name="colorOnSecondary">@color/T1color3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background" >?attr/colorPrimaryVariant</item>
        <item name="android:textColor" >?attr/colorOnPrimary</item>
    </style>

